{
  "name": "organizerify",
  "version": "1.0.0",
  "description": "app for your ogranizing",
  "main": "index.js",
  "repository": "https://github.com/castigere/organizerify",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others  \"yarn --cwd backend start:dev\" \"yarn --cwd frontend dev\"",
    "build:packages": "yarn --cwd packages/apollo-link-console-log build:js",
    "build:frontend": "yarn --cwd frontend build",
    "build:backend": "yarn --cwd backend transpile",
    "build:copyfiles": "copyfiles -u 1 ./backend/build/** . && copyfiles -u 1 ./backend/package.json ./build && copyfiles -u 1 frontend/build/** build",
    "build:deployment": "yarn build:packages && yarn build:frontend && yarn build:backend && yarn build:copyfiles"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "copyfiles": "^2.3.0"
  }
}